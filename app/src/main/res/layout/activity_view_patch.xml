<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#e6e6e6"
    tools:context=".ViewPatchActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
                app:popupTheme="@style/MenuStyle"/>

            <ImageView
                android:id="@+id/patch_image"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/patch_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Naslov"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/patch_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grad"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/patch_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posiljalac"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/patch_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="22.12.2020 4:09pm"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/patch_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opis"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/patch_delete_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Obrisi krplenje"
                android:textSize="22sp"
                android:background="#f00"
                android:textColor="#fff"/>



        </com.google.android.material.appbar.AppBarLayout>

